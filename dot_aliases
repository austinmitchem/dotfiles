alias dc='docker-compose'
alias ll='ls -al'
alias cz='chezmoi'
alias ppath='printf "%s\n" $path'
alias kl='kubectl'
alias rm-containers='docker container rm $(docker ps -aq)'
alias stop-containers='docker container stop $(docker ps -q)'
alias git-root='cd $(git rev-parse --show-toplevel)'
alias pip-clean='pip freeze | xargs pip uninstall -y'

[[ -f ~/.aliases.local ]] && source ~/.aliases.local
