# https://git-scm.com/docs/git-config

[alias]
	st = status

	# View abbreviated SHA, description, and history graph of the latest 20 commits
	l = log --pretty=oneline -n 20 --graph --abbrev-commit

	# Cleanup repoistory and switch to main branch
	fresh = !git stash && git checkout main && git pull origin main && git sweep

	# Get root git directory
	root = git rev-parse --show-toplevel

	# Show verbose output about tags, branches or remotes
	tags = tag -l
	branches = branch --all
	remotes = remote --verbose

	# List aliases
	alias = config --get-regexp alias

	# Amend the currently staged files to the latest commit
	amend = commit --amend --reuse-message=HEAD

	# Interactive rebase with the given number of latest commits.
	rb = "!r() { git rebase -i HEAD~$1; }; r"

	# Remove branches that have already been merged with main.
	sweep = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

	# List contributors with number of commits.
	contrib = shortlog --summary --numbered

	# Show the user email for the current repository.
	whoami = config user.email

[core]
	excludesfile = ~/.gitignore
	editor = code --wait --new-window

[checkout]
	defaultRemote = origin

[credential]
	helper = osxkeychain

[diff]
	tool = vscode

[difftool "vscode"]
	cmd = code --wait --diff --new-window $LOCAL $REMOTE

[fetch]
	prune = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[include]
	path = ~/.gitconfig.local

[init]
	defaultBranch = main

[push]
	autoSetupRemote = true
	default = simple
